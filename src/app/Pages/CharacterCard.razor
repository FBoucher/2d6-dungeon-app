@using c5m._2d6Dungeon;
@using System.Text.Json;
@inject HttpClient Http;


<h3>Character Card</h3>
<EditForm Model="@character">
    <div class="form-group row">
        <label for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <InputText id="Name" class="form-control" placeholder="Character Full Name" @bind-Value="character.Name" />
        </div>
    </div>
</EditForm>

@code {
    [Parameter]
    public Character character { get; set; } = new Character("Toby");

    [Parameter]
    public string Id { get; set; }

    protected async override Task OnInitializedAsync()
    {
        if (int.Parse(Id) > 0)
        {
            try
            {
                character = await Http.GetFromJsonAsync<Character>($"http://localhost:5000/api/character/{int.Parse(Id)}");
            }
            catch (Exception ex)
            {
                Console.WriteLine("Oops1 --> " + ex.Message);
            }
        }

    }
}
