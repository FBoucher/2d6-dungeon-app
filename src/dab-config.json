{
  "$schema": "https://github.com/Azure/data-api-builder/releases/download/v0.8.51/dab.draft.schema.json",
  "data-source": {
    "database-type": "mysql",
    "connection-string": "Server=host.docker.internal;Database=2d6db;User ID=frank;Password=myPassword;",
    "options": {}
  },
  "runtime": {
    "rest": {
      "enabled": true,
      "path": "/api"
    },
    "graphql": {
      "enabled": true,
      "path": "/graphql",
      "allow-introspection": true
    },
    "host": {
      "cors": {
        "origins": [
          "http://localhost:5000"
        ],
        "allow-credentials": false
      },
      "authentication": {
        "provider": "StaticWebApps"
      },
      "mode": "development",
      "authenticate-devmode-requests": false
    }
  },
  "entities": {
    "Room": {
      "source": {
        "object": "Rooms",
        "type": "table",
        "key-fields": [
          "RoomID"
        ]
      },
      "graphql": {
        "enabled": true,
        "type": {
          "singular": "Room",
          "plural": "Rooms"
        }
      },
      "rest": {
        "enabled": true
      },
      "permissions": [
        {
          "role": "anonymous",
          "actions": [
            {
              "action": "create"
            },
            {
              "action": "read"
            },
            {
              "action": "update"
            },
            {
              "action": "delete"
            }
          ]
        }
      ]
    },
    "BodySearch": {
      "source": {
        "object": "BodySearch",
        "type": "table",
        "key-fields": [
          "BodySearchID"
        ]
      },
      "graphql": {
        "enabled": true,
        "type": {
          "singular": "BodySearch",
          "plural": "BodySearches"
        }
      },
      "rest": {
        "enabled": true
      },
      "permissions": [
        {
          "role": "anonymous",
          "actions": [
            {
              "action": "*"
            }
          ]
        }
      ]
    }
  }
}