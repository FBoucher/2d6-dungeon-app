@page "/counter"
@inject D6Service d6Sercice;
@rendermode InteractiveServer

<PageTitle>Dices</PageTitle>

<FluentLabel Typo="Typography.PageTitle">Dices</FluentLabel>

<img src="dices/red-dice@(dice1).png" />
<img src="dices/purple-dice@(dice2).png" />

<br/>
<FluentButton Appearance="Appearance.Accent" OnClick="Roll2Dices">Roll</FluentButton>

@code {
    public int dice1 = 1;
    public int dice2 = 1;
   
    public void Roll2Dices()
    {
        var dices = DiceResult.Roll2Dices();
        dice1 = dices.PrimaryDice;
        dice2= dices.SecondaryDice;
    }

}
