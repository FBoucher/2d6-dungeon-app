
@if(magicPotions != null){

    <FluentDataGrid Items="@potions" style="width: 100%;">
        <PropertyColumn Title="Magic scrolls" Property="@(a => a.PotionType)" Sortable="false" Class="multiline-text" />
        <PropertyColumn Title="Orbit" Property="@(a => a.Modifier ?? "")" Sortable="false"  Class="multiline-text"/>
        <PropertyColumn Title="Displel doubles" Property="@(a => a.Duration ?? "")" Sortable="false" Class="multiline-text" />
    </FluentDataGrid>
}

@code {

    [Parameter]
    public List<MagicPotion>? magicPotions { get; set; }
    
    IQueryable<MagicPotion>? potions;
    
    protected override void OnInitialized()
    {
        potions = magicPotions?.AsQueryable();
    }
}
