@page "/fetchdata"
@using c5m._2d6Dungeon;
@inject ID6Service D6Service;
@inject HttpClient Http
@using System.Text.Json

<PageTitle>Room list</PageTitle>

<h1>Room list</h1>

@if (rooms == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Roll</th>
                <th>RoomType</th>
                <th>Description</th>
                <th>Encounter</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var room in rooms.value)
            {
                <tr>
                    <td>@room.roll.ToString()</td>
                    <td>@room.room_type</td>
                    <td>@room.description</td>
                    <td>@room.encounter</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="row justify-content-md-center">

    <p>Test Fetching</p>
    <div class="row align-items-center">
        <button type="button" class="btn btn-outline-primary" @onclick="GetWeapons">Get Weapons</button> 

        <input id="weaponName" @bind="weaponName" />
        <button type="button" class="btn btn-outline-primary" @onclick="GetWeaponManoeuvres">Get Manoeuvre for</button>
    </div>
    
</div>
}

@code {
    private RoomList? rooms;
    private string weaponName = "LONGSWORD";

    protected override async Task OnInitializedAsync()
    {
        Console.WriteLine("strating");

        try{
            rooms = await Http.GetFromJsonAsync<RoomList>("http://localhost:5000/api/room");
        }
        catch(Exception ex){
            Console.WriteLine("Oops1 --> " + ex.Message);
            rooms = new RoomList();
        }
    }

    private async Task GetWeapons()
    {
        try{
            var weapons = await D6Service.GetWeapons();
        }
        catch(Exception ex){
            Console.WriteLine("Oops1 --> " + ex.Message);
        }
    }

    private async Task GetWeaponManoeuvres()
    {
        try{
            var manoeuvres = await D6Service.GetWeaponManoeuvreList(weaponName, 1);
        }
        catch(Exception ex){
            Console.WriteLine("Oops1 --> " + ex.Message);
        }
    }
}
