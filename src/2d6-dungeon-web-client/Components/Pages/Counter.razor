@page "/counter"
@inject D6Service d6Sercice;
@rendermode InteractiveServer

<PageTitle>Dice</PageTitle>

<FluentLabel Typo="Typography.PageTitle">Dice</FluentLabel>

<img src="dice/red-dice@(dice1).png" />
<img src="dice/purple-dice@(dice2).png" />

<br/>
<FluentButton Appearance="Appearance.Accent" OnClick="Roll2Dice">Roll</FluentButton>

@code {
    public int dice1 = 1;
    public int dice2 = 1;
   
    public void Roll2Dice()
    {
        var dice = DiceResult.Roll2Dice();
        dice1 = dice.PrimaryDice;
        dice2= dice.SecondaryDice;
    }

}
