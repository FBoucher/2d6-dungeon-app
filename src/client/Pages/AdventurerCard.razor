@using c5m._2d6Dungeon;
@inject ID6Service D6Service;


<h3>Adventurer Card</h3>
<EditForm Model="@adventurer">
    <div class="form-group row">
        <label for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <InputText id="Name" class="form-control" placeholder="Adventurer Full Name" @bind-Value="adventurer.Name" />
        </div>
    </div>
</EditForm>

@code {
    [Parameter]
    public Game.Adventurer adventurer { get; set; } = new Game.Adventurer("Toby");

    [Parameter]
    public int Id { get; set; }

    protected async override Task OnInitializedAsync()
    {
        if(Id > 0)
        {
            try
            {
                adventurer = await D6Service.GetAdventurer(Id);
            }
            catch (Exception ex)
            {
                Console.WriteLine("Oops1 --> " + ex.Message);
            }
        }

    }
}
